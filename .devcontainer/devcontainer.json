{
  "name": "Node.js",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": { 
      "VARIANT": "14"
    }
  },
  "runArgs": [ "-u", "node" ],
  "customizations": {
    "vscode": {
      "settings": { 
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "npm install",
  "forwardPorts": [ 3000 ]
}